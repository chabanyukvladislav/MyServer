@model IEnumerable<PeopleApp.Models.People>

@{
    ViewData["Title"] = "View";
}

<h2>Peoples</h2>

<p>
    <a asp-action="Create">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, name = item.Name, surname = item.Surname, phone = item.Phone }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, name = item.Name, surname = item.Surname, phone = item.Phone })
                </td>
            </tr>
        }
    </tbody>
</table>